#========================Global===============
begin
 prog = irexec
 remote = RM-820
 button = power
 repeat = 1
 config =  gnome-session-quit --power-off
end

#========================Volume===============
begin
 prog = irexec
 remote = RM-820
 button = voldn
 repeat = 1
 delay = 2
 config = echo KeyStrPress XF86AudioLowerVolume KeyStrRelease XF86AudioLowerVolume | xmacroplay $DISPLAY
end

