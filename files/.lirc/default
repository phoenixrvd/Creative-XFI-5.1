# $HOME/.lircrc
#All application specific lircrc files are within ~/.lirc
include ~/.lirc/mediakeys
#include ~/.lirc/vlc
### Session
begin
 prog = irexec
 remote = RM-820
 button = power
 repeat = 1
 config =  gnome-session-quit --power-off
end
#include ~/.lirc/gnome-session-save

begin
 prog = irexec
 remote = RM-820
 button = menu/back
 repeat = 1
 delay = 2
 config = echo KeyStrPress BackSpace KeyStrRelease BackSpace | xmacroplay $DISPLAY
end

begin
 prog = irexec
 remote = RM-820
 button = menu/back-long
 repeat = 1
 config = echo KeyStrPress Menu KeyStrRelease Menu | xmacroplay $DISPLAY
end

begin
 prog = irexec
 remote = RM-820
 button = return
 repeat = 1
 delay = 2
 config = echo KeyStrPress Escape KeyStrRelease Escape | xmacroplay $DISPLAY
end

begin
 prog = irexec
 remote = RM-820
 button = up
 repeat = 1
 delay = 2
 config = echo KeyStrPress Up KeyStrRelease Up | xmacroplay $DISPLAY
end

begin
 prog = irexec
 remote = RM-820
 button = down
 repeat = 1
 delay = 2
 config = echo KeyStrPress Down KeyStrRelease Down | xmacroplay $DISPLAY
end

begin
 prog = irexec
 remote = RM-820
 button = left
 repeat = 1
 delay = 2
 config = echo KeyStrPress Left KeyStrRelease Left | xmacroplay $DISPLAY
end

begin
 prog = irexec
 remote = RM-820
 button = right
 repeat = 1
 delay = 2
 config = echo KeyStrPress Right KeyStrRelease Right | xmacroplay $DISPLAY
end

begin
 prog = irexec
 remote = RM-820
 button = ok
 repeat = 1
 delay = 2
 config = echo KeyStrPress Return KeyStrRelease Return | xmacroplay $DISPLAY
end
